<mah:MetroWindow x:Class="Janus_Client_V1.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 mc:Ignorable="d"
                 SaveWindowPosition="True"
                 FontFamily="Oswald"
                 Background="#2e2e2e"
        Title="Projekt-Janus Client V1" Height="700" Width="1200" ResizeMode="NoResize" Icon="apple-icon-72x72.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="job_angenommen" />
        <BooleanToVisibilityConverter x:Key="blinker_links" />
        <BooleanToVisibilityConverter x:Key="blinker_rechts" />
        <BooleanToVisibilityConverter x:Key="elektrik_an" />
        <BooleanToVisibilityConverter x:Key="motor_an" />
        <BooleanToVisibilityConverter x:Key="licht_low" />
        <BooleanToVisibilityConverter x:Key="licht_high" />
        <BooleanToVisibilityConverter x:Key="bremslicht"/>
        <BooleanToVisibilityConverter x:Key="tank_warnung" />
        <BooleanToVisibilityConverter x:Key="adblue_warnung" />
        <BooleanToVisibilityConverter x:Key="air_warnung" />
        <BooleanToVisibilityConverter x:Key="oil_warnung" />
        <BooleanToVisibilityConverter x:Key="water_warnung" />
        <BooleanToVisibilityConverter x:Key="battery_warnung" />
        <BooleanToVisibilityConverter x:Key="parking_brake" />
        <BooleanToVisibilityConverter x:Key="trailer_attached" />
    </Window.Resources>


    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout x:Name="LeftFlyOut" Width="270">
                <StackPanel Orientation="Vertical">
                    <Label Content="Farbschema wählen:"/>
                    <ComboBox x:Name="Farbschema" SelectedValuePath="Tag" SelectionChanged="Farbschema_SelectionChanged" Margin="0,0,0,20">
                        <ComboBoxItem Tag="Dark.Red">Dunkel Rot</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Green">Dunkel Grün</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Blue">Dunkel Blau</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Purple">Dunkel PurPur</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Orange">Dunkel Orange</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Lime">Dunkel Limette</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Emerald">Dunkel Emerald</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Teal">Dunkel Teal</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Cyan">Dunkel Cyan</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Cobalt">Dunkel Cobald</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Indigo">Dunkel Indigo</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Violet">Dunkel Violett</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Pink">Dunkel Pink</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Magenta">Dunkel Magenta</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Crimson">Dunkel Crimson</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Amber">Dunkel Amber</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Yellow">Dunkel Gelb</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Brown">Dunkel Braun</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Olive">Dunkel Olive</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Steel">Dunkel Stahl</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Mauve">Dunkel Mauve</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Taupe">Dunkel Taupe</ComboBoxItem>
                        <ComboBoxItem Tag="Dark.Sienna">Dunkel Wüste</ComboBoxItem>

                        <ComboBoxItem Tag="Light.Red">Hell Rot</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Green">Hell Grün</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Blue">Hell Blau</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Purple">Hell PurPur</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Orange">Hell Orange</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Lime">Hell Limette</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Emerald">Hell Emerald</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Teal">Hell Teal</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Cyan">Hell Cyan</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Cobalt">Hell Cobald</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Indigo">Hell Indigo</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Violet">Hell Violett</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Pink">Hell Pink</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Magenta">Hell Magenta</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Crimson">Hell Crimson</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Amber">Hell Amber</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Yellow">Hell Gelb</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Brown">Hell Braun</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Olive">Hell Olive</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Steel">Hell Stahl</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Mauve">Hell Mauve</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Taupe">Hell Taupe</ComboBoxItem>
                        <ComboBoxItem Tag="Light.Sienna">Hell Wüste</ComboBoxItem>
                    </ComboBox>

                    <Label Content="System-Sounds:"/>
                    <ComboBox x:Name="Systemsounds" SelectedValuePath="Tag" SelectionChanged="Systemsounds_SelectionChanged" Margin="0,0,0,20">
                        <ComboBoxItem Tag="An">An</ComboBoxItem>
                        <ComboBoxItem Tag="Aus">Aus</ComboBoxItem>
                    </ComboBox>

                </StackPanel>
            </mah:Flyout>



            <mah:Flyout x:Name="BottomFlyOut" Height="180" Position="Bottom" Background="Orange" Foreground="Black">



                <StackPanel Orientation="Vertical">
                    <Label Content="Bitte gib das Land und den Tankpreis ein !" Foreground="Black" FontSize="26"/>
                    <Separator/>

                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="eingabe_land" Height="40" Width="200" FontSize="18" SelectedValue="Tag">
                            <ComboBoxItem Tag="Belgien">Belgien</ComboBoxItem>
                            <ComboBoxItem Tag="Bulgarien">Bulgarien</ComboBoxItem>
                            <ComboBoxItem Tag="Deutschland" IsSelected="True">Deutschland</ComboBoxItem>
                            <ComboBoxItem Tag="Dänemark">Dänemark</ComboBoxItem>
                            <ComboBoxItem Tag="Estland">Estland</ComboBoxItem>
                            <ComboBoxItem Tag="Frankreich">Frankreich</ComboBoxItem>
                            <ComboBoxItem Tag="Finnland">Finnland</ComboBoxItem>
                            <ComboBoxItem Tag="Großbritannien">Großbritannien</ComboBoxItem>
                            <ComboBoxItem Tag="Italien">Italien</ComboBoxItem>
                            <ComboBoxItem Tag="Lettland">Lettland</ComboBoxItem>
                            <ComboBoxItem Tag="Litauen">Litauen</ComboBoxItem>
                            <ComboBoxItem Tag="Luxemburg">Luxemburg</ComboBoxItem>
                            <ComboBoxItem Tag="Niederland">Niederlande</ComboBoxItem>
                            <ComboBoxItem Tag="Österreich">Österreich</ComboBoxItem>
                            <ComboBoxItem Tag="Polen">Polen</ComboBoxItem>
                            <ComboBoxItem Tag="Portugal">Portugal</ComboBoxItem>
                            <ComboBoxItem Tag="Rumänien">Rumänien</ComboBoxItem>
                            <ComboBoxItem Tag="Russland">Russland</ComboBoxItem>
                            <ComboBoxItem Tag="Schweden">Schweden</ComboBoxItem>
                            <ComboBoxItem Tag="Schweiz">Schweiz</ComboBoxItem>
                            <ComboBoxItem Tag="Slowakei">Slowakai</ComboBoxItem>
                            <ComboBoxItem Tag="Spanien">Spanien</ComboBoxItem>
                            <ComboBoxItem Tag="Tschechien">Tschechien</ComboBoxItem>
                            <ComboBoxItem Tag="Türkei">Türkei</ComboBoxItem>
                            <ComboBoxItem Tag="Ungarn">Ungarn</ComboBoxItem>
                        </ComboBox>
                        
                        <Label Content="{Binding EURO_DOLLAR}" FontSize="30" Foreground="Black" VerticalAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Center" Margin="20,0,0,0" />
                        <mah:NumericUpDown x:Name="preisangabe" Width="150" Value="1.24" InterceptManualEnter="False" Maximum="1.99" Minimum="1.00" TextAlignment="Center" InterceptMouseWheel="False" InterceptArrowKeys="True" Interval="0.01" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" Height="40" Margin="10,0,0,0"/>
                       
                       
                    </StackPanel>
                    <Button x:Name="preis_eintragen" Height="40" Width="407" Content="Preis je Liter Eintragen" Background="Green" HorizontalAlignment="Left" Margin="0,20,0,0" Padding="10" Click="preis_eintragen_Click"/>





                </StackPanel>


               
            </mah:Flyout>

        </mah:FlyoutsControl>



    </mah:MetroWindow.Flyouts>


    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>

            <ToggleButton Content="Layers" Click="Hauptmenu_Click" IsChecked="{Binding ElementName=LeftFlyOut, Path=IsOpen}" Cursor="Hand">
                <ToggleButton.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome Kind="BarsSolid" Width="25" Height="25" />
                        </StackPanel>
                    </DataTemplate>
                </ToggleButton.ContentTemplate>
            </ToggleButton>


            <ToggleButton Content="Layers" Click="Hauptmenu_Click" IsChecked="{Binding ElementName=BottomFlyOut, Path=IsOpen}" Cursor="Hand">
                <ToggleButton.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconFontAwesome Kind="AwardSolid" Width="25" Height="25" />
                        </StackPanel>
                    </DataTemplate>
                </ToggleButton.ContentTemplate>
            </ToggleButton>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>

            <Button Click="LaunchGitHubSite" ToolTip="Open up the GitHub Site">
                <iconPacks:PackIconModern Width="22" Height="22" Kind="SocialGithubOctocat" />
            </Button>

            <Button Click="Spende_einen_Kaffee" Content="Kaffeekasse">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconSimpleIcons Width="22" Height="22" VerticalAlignment="Center" Kind="BuyMeACoffee" ToolTip="Spende dem Programmierer einen Kaffee"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Click="Beta_Tester" Content="Beta-Tester werden...">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Width="22" Height="22" VerticalAlignment="Center" Kind="AbTesting" ToolTip="Werde Beta-Tester und erhalte Zugang zu zahlreichen Features !" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>


    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="30" FontSize="12" HorizontalAlignment="Stretch">
            <StatusBarItem>
                <Label Content="{Binding TELEMETRY_VERSION}" />
            </StatusBarItem>
            <StatusBarItem>
                <Label Content="{Binding DLL_VERSION}" />
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <StatusBarItem  Content="{Binding CLIENT_VERSION}"/>
                </StackPanel>
            </StatusBarItem>


        </StatusBar>

        <Grid x:Name="GRID_FAHRT">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="453*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="27*"/>
            </Grid.ColumnDefinitions>



            <Label Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="4" x:Name="SPEED_LBL" Content="{Binding SPEED}" HorizontalContentAlignment="Center" FontSize="50" FontFamily="Oswald" FontWeight="Bold"/>
            <Label Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="4" x:Name="KMH_MI_LBL" Content="{Binding KMH_MI}" VerticalContentAlignment="Top" FontSize="16" HorizontalContentAlignment="Center" FontFamily="Oswald" FontWeight="Bold"/>

            <!-- ICON SET -->
            <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="16" Background="Orange" Padding="10" CornerRadius="30"/>
            <Image Grid.Row="3" Grid.Column="3" Source="{iconPacks:MaterialImage Kind=CarElectric}" Margin="3" Visibility="{Binding ELEKTRIK_AN, Converter={StaticResource elektrik_an}}" />
            <Image Grid.Row="3" Grid.Column="4" Source="{iconPacks:MaterialImage Kind=Engine}" Margin="3" Visibility="{Binding MOTOR_AN, Converter={StaticResource motor_an}}"/>
            <Image Grid.Row="3" Grid.Column="5" Source="{iconPacks:MaterialImage Kind=CarLightDimmed}" Margin="3" Visibility="{Binding LICHT_LOW, Converter={StaticResource licht_low}}"/>
            <Image Grid.Row="3" Grid.Column="6" Source="{iconPacks:MaterialImage Kind=CarLightHigh}" Margin="3" Visibility="{Binding LICHT_HIGH, Converter={StaticResource licht_high}}"/>
            <Image Grid.Row="3" Grid.Column="7" Source="{iconPacks:FontAwesomeImage Kind=GasPumpSolid}" Margin="3" Visibility="{Binding TANK_WARNUNG, Converter={StaticResource tank_warnung}}"/>
            <Image Grid.Row="3" Grid.Column="8" Source="{iconPacks:MaterialImage Kind=CarBrakeAlert}" Margin="3" Visibility="{Binding BREMSLICHT, Converter={StaticResource bremslicht}}"/>
            <Image Grid.Row="3" Grid.Column="9" Source="{iconPacks:FontAwesomeImage Kind=WindSolid}" Margin="3" Visibility="{Binding AIR_WARNUNG, Converter={StaticResource air_warnung}}"/>
            <Image Grid.Row="3" Grid.Column="10" Source="{iconPacks:FontAwesomeImage Kind=OilCanSolid}" Margin="3" Visibility="{Binding OIL_WARNUNG, Converter={StaticResource oil_warnung}}"/>
            <Image Grid.Row="3" Grid.Column="11" Source="{iconPacks:FontAwesomeImage Kind=HotjarBrands}" Margin="3" Visibility="{Binding WATER_WARNUNG, Converter={StaticResource water_warnung}}"/>
            <Image Grid.Row="3" Grid.Column="12" Source="{iconPacks:MaterialImage Kind=BatteryCharging10}" Margin="3" Visibility="{Binding BATTERY_WARNUNG, Converter={StaticResource battery_warnung}}"/>

            <!-- BLINKER -->
            <Border Background="LightGray" BorderBrush="White" Grid.Row="1" Grid.Column="6" CornerRadius="20" Visibility="{Binding BLINKER_LINKS, Converter={StaticResource blinker_links}}"/>
            <Image Grid.Row="1" Grid.Column="6" Source="{iconPacks:MaterialLightImage Kind=ArrowLeftCircle}" Margin="3" Visibility="{Binding BLINKER_LINKS, Converter={StaticResource blinker_links}}"/>

            <Border Background="LightGray" BorderBrush="White" Grid.Row="1" Grid.Column="11" CornerRadius="20" Visibility="{Binding BLINKER_RECHTS, Converter={StaticResource blinker_rechts}}"/>
            <Image Grid.Row="1" Grid.Column="11" Source="{iconPacks:MaterialLightImage Kind=ArrowRightCircle}" Margin="3" Visibility="{Binding BLINKER_RECHTS, Converter={StaticResource blinker_rechts}}"/>


            <!-- ICON SET ENDE -->

            <!-- LICENSE PLATE -->



            <!-- LICENSE PLATE ENDE -->

            
            <Label Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="14" FontSize="16" x:Name="INFO_LBL_1" Content="{Binding FAHRINFO_1}" HorizontalContentAlignment="Center" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding CARGO_LOADED, Converter={StaticResource job_angenommen}}"/>
            <Label Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="12" FontSize="16" x:Name="INFO_LBL_2" Content="{Binding FAHRINFO_2}" HorizontalContentAlignment="Center" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding CARGO_LOADED, Converter={StaticResource job_angenommen}}"/>


            <Border Background="LightGray" BorderBrush="red" BorderThickness="0,5,5,5" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" CornerRadius="0,20,20,0"/>
            <Label Grid.Row="10" Foreground="Black" Grid.Column="0" FontSize="16" x:Name="Frachtschaden" Content="Frachtschaden:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding TRAILER_ATTACHED, Converter={StaticResource trailer_attached}}"/>
            <Label Grid.Row="10" Foreground="Black" Grid.Column="1" FontSize="16" x:Name="Schaden" Content="{Binding FRACHTSCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding TRAILER_ATTACHED, Converter={StaticResource trailer_attached}}"/>
            <Label Grid.Row="10" Foreground="Black" Grid.Column="2" FontSize="16" x:Name="Schaden2" Content="%" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding TRAILER_ATTACHED, Converter={StaticResource trailer_attached}}"/>

            <Label Grid.Row="8" Foreground="Black" Grid.Column="0" FontSize="16" x:Name="LKW_SCHADEN_1" Content="LKW-Schaden:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Oswald" FontWeight="Bold" />
            <Label Grid.Row="8" Foreground="Black" Grid.Column="1" FontSize="16" x:Name="LKW_SCHADEN_2" Content="{Binding LKW_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Oswald" FontWeight="Bold"/>
            <Label Grid.Row="8" Foreground="Black" Grid.Column="2" FontSize="16" x:Name="LKW_SCHADEN_3" Content="%" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="Oswald" FontWeight="Bold"/>

            <Label Grid.Row="9" Foreground="Black" Grid.Column="0" FontSize="16" x:Name="TRAILER_SCHADEN_1" Content="Trailer-Schaden:" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding TRAILER_ATTACHED, Converter={StaticResource trailer_attached}}" />
            <Label Grid.Row="9" Foreground="Black" Grid.Column="1" FontSize="16" x:Name="TRAILERSCHADEN_2" Content="{Binding TRAILER_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding TRAILER_ATTACHED, Converter={StaticResource trailer_attached}}"/>
            <Label Grid.Row="9" Foreground="Black" Grid.Column="2" FontSize="16" x:Name="TRAILER_SCHADEN_3" Content="%" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontFamily="Oswald" FontWeight="Bold" Visibility="{Binding TRAILER_ATTACHED, Converter={StaticResource trailer_attached}}"/>

            <!-- TEMPOLIMIT -->
            <Border x:Name="TEMPOLIMIT" BorderBrush="Red" BorderThickness="20" CornerRadius="150" Grid.Row="1" Grid.Column="0" Height="150" Width="150" Grid.RowSpan="3" VerticalAlignment="Top" Grid.ColumnSpan="1" Background="White">
                <Label Content="80" FontSize="73" FontWeight="Bold" Margin="0,-5,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="Black"/>
            </Border>

            <!-- PARKING BRAKE -->
            <Border x:Name="BRAKE" Grid.Row="12" Grid.Column="10" Grid.ColumnSpan="2" Grid.RowSpan="3" Background="red" BorderBrush="Yellow" BorderThickness="2" CornerRadius="100" Visibility="{Binding PARKING_BRAKE, Converter={StaticResource parking_brake}}">
                <Image Source="{iconPacks:MaterialImage Kind=CarBrakeParking}" Margin="10" Visibility="{Binding PARKING_BRAKE, Converter={StaticResource parking_brake}}"/>
            </Border>

            <!-- HERSTELLER / MODELL -->
            <Border x:Name="HERSTELLER" Grid.Row="8" Grid.ColumnSpan="4" Grid.Column="14" Grid.RowSpan="3" Background="LightGray" BorderBrush="red" BorderThickness="5,5,0,5" CornerRadius="20,0,0,20"/>
            <Label Foreground="Black" Content="{Binding LKW_HERSTELLER}" Grid.Row="8" Grid.Column="17" Grid.RowSpan="2" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
            <Label Foreground="Black" Content="{Binding LKW_MODELL}" Grid.Row="10" Grid.Column="17" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" />

            <Image Source="{iconPacks:MaterialImage Kind=TruckTrailer}" HorizontalAlignment="Right" Height="30" Grid.Row="10" Grid.Column="15" Visibility="{Binding TRAILER_ATTACHED, Converter={StaticResource trailer_attached}}"/>
            <Image Source="{iconPacks:FontAwesomeImage Kind=TruckSolid}" HorizontalAlignment="Left" Height="30" Grid.Row="10" Grid.Column="16"/>




        </Grid>





    </DockPanel>


</mah:MetroWindow>